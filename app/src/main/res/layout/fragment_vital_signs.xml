<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="io.github.hkust1516csefyp43.ehr.view.fragment.patient_visit_activity.VitalSignsFragment">

    <TextView
        android:id="@+id/tvBloodPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure"/>

    <EditText
        android:id="@+id/etSystolic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvBloodPressure"/>

    <TextView
        android:id="@+id/separator1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/etSystolic"
        android:text="/"/>

    <EditText
        android:id="@+id/etDiastolic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/separator1"/>

</RelativeLayout>
