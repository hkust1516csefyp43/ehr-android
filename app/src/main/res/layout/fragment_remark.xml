<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="8dp"
              android:theme="@style/AppTheme2"
              tools:context="io.github.hkust1516csefyp43.ehr.view.fragment.patient_visit_activity.RemarkFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="Any Remark?"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/scRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tvSwitch"
            android:checked="true"
            android:gravity="center_horizontal"/>
    </RelativeLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilRemark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatMultiAutoCompleteTextView
            android:id="@+id/etRemark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Type here"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
