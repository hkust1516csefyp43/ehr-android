<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="fragment_personal_data">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:id="@+id/llTagNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/etTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tag Number"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:maxLines="1"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last name"
                    android:inputType="textCapWords"
                    android:imeOptions="actionNext"
                    android:maxLines="1"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/middle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Middle name"
                    android:inputType="textCapWords"
                    android:imeOptions="actionNext"
                    android:maxLines="1"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First name"
                    android:inputType="textCapWords"
                    android:maxLines="1"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/native_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Native name"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:maxLines="1"/>

            </android.support.design.widget.TextInputLayout>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="18"
                android:useDefaultMargins="true"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="6"
                    android:layout_gravity="center_vertical"
                    android:text="Gender"/>

                <Spinner
                    android:id="@+id/sGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|fill_horizontal"
                    android:layout_columnSpan="12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="6"
                    android:layout_gravity="center_vertical"
                    android:text="Status"/>

                <Spinner
                    android:id="@+id/sStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_columnSpan="12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="6"
                    android:layout_gravity="center_vertical"
                    android:text="Blood Type"/>

                <Spinner
                    android:id="@+id/sBloodType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_columnSpan="12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="6"
                    android:layout_gravity="center_vertical"
                    android:text="Age"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_columnSpan="12"
                    android:layout_gravity="fill_horizontal"
                    android:weightSum="3">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|fill_horizontal"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/etYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Years"
                            android:selectAllOnFocus="true"
                            android:imeOptions="actionNext"
                            android:maxLines="1"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/etMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Months"
                            android:selectAllOnFocus="true"
                            android:imeOptions="actionNext"
                            android:text="0"
                            android:maxLines="1"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/etWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Weeks"
                            android:selectAllOnFocus="true"
                            android:imeOptions="actionNext"
                            android:text="0"
                            android:maxLines="1"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="6"
                    android:layout_gravity="center_vertical"
                    android:text="Birthday"/>

                <TextView
                    android:id="@+id/tvBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="10"
                    android:paddingLeft="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center_vertical|fill_horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="Click to select date"/>

                <ImageView
                    android:id="@+id/ivRemoveBirthday"
                    android:layout_columnSpan="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"/>

                <TextView
                    android:id="@+id/tvPhoneCode"
                    android:layout_columnSpan="6"
                    android:text="Phone\nCountry code"
                    android:lines="2"
                    android:layout_gravity="center_vertical"/>

                <Spinner
                    android:id="@+id/sPhoneCode"
                    android:layout_columnSpan="12"
                    android:layout_gravity="fill|center_vertical"/>

                <TextView
                    android:id="@+id/tvPhoneNumber"
                    android:layout_columnSpan="6"
                    android:text="Phone Number"
                    android:layout_gravity="center_vertical"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_columnSpan="12"
                    android:layout_gravity="center_vertical|fill">

                    <EditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:maxLines="1"/>

                </android.support.design.widget.TextInputLayout>

            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address:"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textImeMultiLine"
                    android:lines="3"
                    android:imeOptions="actionNext"
                    android:maxLines="6"/>

            </android.support.design.widget.TextInputLayout>



        </LinearLayout>

    </LinearLayout>

</ScrollView>