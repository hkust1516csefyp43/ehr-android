<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.AboutActivity">

    <TextView
        android:id="@+id/testing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Website:"
        android:textColor="@color/md_black_1000" />

    <TextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:autoLink="all"
        android:text="http://hkust1516csefyp43.github.io" />

    <TextView
        android:id="@+id/license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/link"
        android:layout_marginTop="22dp"
        android:text="Licenses:"
        android:textColor="@color/md_black_1000" />

    <TextView
        android:id="@+id/license1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/license"
        android:autoLink="all"
        android:text="https://components.xamarin.com/license/xamandroidsupportv7appcompat"
        android:textColor="@color/md_black_1000" />

    <TextView
        android:id="@+id/license2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/license1"
        android:autoLink="all"
        android:text="https://github.com/makovkastar/FloatingActionButton/blob/master/LICENSE.MD" />

    <TextView
        android:id="@+id/license3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/license2"
        android:autoLink="all"
        android:text="https://github.com/amulyakhare/TextDrawable/blob/master/LICENSE" />

</RelativeLayout>
