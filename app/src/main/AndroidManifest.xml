<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.github.hkust1516csefyp43.ehr"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.TwoRecyclerViewPatientsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="0f4bb31d70a754d8f62d3f4cc2860718cac7164e"/>

        <activity android:name=".view.activity.AboutActivity">
        </activity>
        <activity
            android:name=".view.activity.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.PatientVisitActivity">
        </activity>
        <activity android:name=".view.activity.SettingsActivity">
        </activity>
        <activity
            android:name=".view.activity.InitiationActivity"
            android:label="@string/title_activity_initiation"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>
